---
import Layout from '../layouts/Layout.astro';
import { format } from 'date-fns';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    heroImage?: string;
    heroImageAlt?: string;
  };
}

const { frontmatter } = Astro.props;
const { title, description, pubDate, heroImage, heroImageAlt } = frontmatter;

const formattedDate = format(new Date(pubDate), 'MMMM dd, yyyy');
---

<Layout title={title} description={description}>
  <article class="prose lg:prose-xl mx-auto py-8">
    <h1 class="text-3xl font-bold text-sepia mb-4">{title}</h1>
    <p class="text-gray-600 mb-4">Published: {formattedDate}</p>
    {heroImage && <img src={heroImage} alt={heroImageAlt} class="rounded-lg shadow-md mb-4" />}
    <p class="text-lg text-gray-700 mb-4">{description}</p>
    <slot />
  </article>
</Layout>